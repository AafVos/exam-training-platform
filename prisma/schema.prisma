generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("AZURE_COSMOS_CONNECTION_STRING")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String
  role        Role     @default(STUDENT)
  vwoLevel    String?
  createdAt   DateTime @default(now())
  lastLoginAt DateTime @default(now())
  
  @@map("users")
}

enum Role {
  STUDENT
  ADMIN
}
